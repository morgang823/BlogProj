@model BlogProj.Models.Blog

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
<h1 class="text-white"> Edit Blog Series: @Html.DisplayFor(model => model.Title)</h1>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-auto col-sm-auto">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-black"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="ImageData" />
            <input type="hidden" asp-for="ContentType" />
            <div class="form-group text-black font-weight-bold">
                <label asp-for="Title" class="control-label text-white font-weight-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-black font-weight-bold"></span>
            </div>
            <div class="form-group text-black font-weight-bold">
                <label asp-for="Description" class="control-label text-white font-weight-bold"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-black font-weight-bold"></span>
            </div>
            <div class="form-group text-black font-weight-bold">
                <label asp-for="ImageFile" class="control-label text-white font-weight-bold">Custom Image</label>
                <input type="file" asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-black font-weight-bold"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
